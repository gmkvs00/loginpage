<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List of Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    .container {
      margin-top: 20px;
      padding-bottom: 100px;
    }

    table {
      width: 100%;
      margin: auto;
      overflow: hidden;
    }

    h2, h3 {
      color: #007bff;
      /* Bootstrap primary color */
    }

    button {
      margin-left: 5px;
    }

    /* Additional styles for better appearance */
    th {
      background-color: #f8f9fa;
    }

    .delete-btn {
      margin-left: 5px;
    }

    .edit-btn {
      margin-left: 5px;
    }

    .table td {
      vertical-align: middle; /* Center align the content vertically */
    }

    .btn-link {
      text-decoration: none; /* Remove underline */
      color: #007bff; /* Bootstrap primary color */
    }

    .btn-link:hover {
      text-decoration: underline; /* Underline on hover for better UX */
    }
  </style>
</head>

<body>
  <a href="/logout" class="btn btn-danger">Logout</a>
  <div class="container">
    <h2 class="text-center">User List</h2>

    <!-- Table for listing users -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>IDF</th>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Gender</th>
          <th>Comment</th>
          <th>Subject</th>
          <th>Capacity</th>
          <th>Favorite Language</th>
          <th>Bike</th>
          <th>Car</th>
          <th>Both</th>
          <th>Favorite Color</th>
          <th>Birthday</th>
          <th>Joining Month</th>
          <th>Cigarettes/Day</th>
          <th>Phone Number</th>
          <th>Actions</th> <!-- Added a header for action buttons -->
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < user_d.length; i++) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= user_d[i].id1 %></td>
            <td><%= user_d[i].NAME %></td>
            <td><%= user_d[i].ADRESS %></td>
            <td><%= user_d[i].EMAIL %></td>
            <td><%= user_d[i].gender %></td>
            <td><%= user_d[i].comment %></td>
            <td><%= user_d[i].subject %></td>
            <td><%= user_d[i].capacity %></td>
            <td><%= user_d[i].programing_language %></td>
            <td><%= user_d[i].bike ? 'Yes' : 'No' %></td>
            <td><%= user_d[i].car ? 'Yes' : 'No' %></td>
            <td><%= user_d[i].h_both ? 'Yes' : 'No' %></td>
            <td><%= user_d[i].fav_color %></td>
            <td><%= user_d[i].birthday %></td>
            <td><%= user_d[i].month_ofJoin %></td>
            <td><%= user_d[i].Quantity_ofC %></td>
            <td><%= user_d[i].phon_number %></td>
            <td>
              <!-- Form to delete user -->
              <form action="/delete/<%= user_d[i].id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger delete-btn">Delete</button>
              </form>
              <a href="/edit/<%= user_d[i].id %>" class="btn btn-primary edit-btn">Edit</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Button to add a new user -->
    <a href="/add" class="btn btn-success">Add Data to Table</a>
  </div>
</body>

</html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    body {
    background-color: #f8f9fa; /* Light gray background for better contrast */
    font-family: Arial, sans-serif; /* Simple and clean font */
}

h3 {
    color: #007bff; /* Bootstrap primary color */
    margin-bottom: 20px; /* Space below the heading */
}

fieldset {
    border: 1px solid #007bff; /* Blue border for fieldset */
    border-radius: 5px; /* Rounded corners */
    padding: 20px; /* Inner padding */
    background-color: #ffffff; /* White background for fieldset */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow effect */
}

legend {
    font-weight: bold; /* Bold text for legend */
    color: #007bff; /* Bootstrap primary color */
}

.mb-3 {
    margin-bottom: 1rem; /* Bottom margin for form elements */
}

label {
    font-weight: bold; /* Bold labels for better visibility */
}

input[type="text"],
input[type="email"],
input[type="tel"],
input[type="date"],
input[type="month"],
input[type="range"],
textarea,
select {
    border: 1px solid #ced4da; /* Border color for inputs */
    border-radius: 4px; /* Rounded corners */
    padding: 0.375rem 0.75rem; /* Inner padding */
    width: 100%; /* Full width for inputs */
}

input[type="checkbox"],
input[type="radio"] {
    margin-right: 5px; /* Space between checkbox/radio and label */
}

input[type="color"] {
    border: none; /* Remove border for color input */
    width: auto; /* Auto width for color input */
}

input[type="submit"],
button {
    background-color: #007bff; /* Bootstrap primary button color */
    color: #ffffff; /* White text for buttons */
    border: none; /* No border */
    border-radius: 4px; /* Rounded corners */
    padding: 0.375rem 0.75rem; /* Inner padding */
    cursor: pointer; /* Pointer cursor on hover */
}

input[type="submit"]:hover,
button:hover {
    background-color: #0056b3; /* Darker blue on hover */
}

input[type="reset"] {
    background-color: #dc3545; /* Bootstrap danger button color */
}

input[type="reset"]:hover {
    background-color: #c82333; /* Darker red on hover */
}

textarea {
    resize: vertical; /* Allow vertical resizing only */
}

@media (max-width: 576px) {
    /* Responsive adjustments */
    h3 {
        font-size: 1.5rem; /* Smaller heading on small screens */
    }
}

</style>

<body style="padding: 30px;">
    <a href="/list">Back</a>
    <h3 class="text-center mt-5">Add a New User</h3>
    <fieldset>
        <legend>User Data</legend>
        <form action="/add" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
            </div>

            <div class="mb-3">
                <label for="adress" class="form-label">Address:</label>
                <input type="text" class="form-control" id="adress" name="adress" required>
            </div>
            <div class="mb-3">
                <div id="err"></div>
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div>
                <label for="Gender">Gender</label>
                <select name="gender" id="gender">
                    <option value="male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div>Give your comment below:- <br><textarea name="cmt" rows="10" cols="50"
                    placeholder="Please write hear"></textarea>
            </div>
            <div> Chose Your Subject <input list="Subject" name="Subject">
                <datalist id="Subject">
                    <option value="C++">C++</option>
                    <option value="Java">Java</option>
                    <option value="JavaScript">JavaScript</option>
                </datalist>
            </div>
            <div>Your Capcity(0to 10)
                <input type="range" name="range" min="0" max="10" id="range">
                <p>Value: <span id="demo"></span></p>
            </div>
            <div><input type="reset" name="reset">
            </div>
            <div> Chouse your favirout programing language <br>
                  <label for="html"></label>
                 <input type="radio" id="html" name="fl" value="HTML">
                  <label for="html">HTML</label><br>
                  <input type="radio" id="css" name="fl" value="CSS">
                  <label for="css">CSS</label><br>
                  <input type="radio" id="javascript" name="fl" value="JavaScript">
                  <label for="javascript">JavaScript</label><br><br>
            </div>
            <div> Check box <br>
                <input type="checkbox" name="v1" id="v1" value="bike">
                <label for="v1" >I have bike</label>
                <input type="checkbox" name="v2" id="v2" value="car">
                <label for="v2" >I have car</label>
                <input type="checkbox" name="v3" id="v3" value="both">
                <label for="v3" >I have both </label>

            </div>
            <div> <label for="color"></label>select your fav color <br>
                <input type="color">
            </div>
            <div>
                 <label for="birthday">Birthday:</label>
                 <input type="date" name="birthday">
            </div>
            <div> 
                <label for="Djoin">Month Of joning</label>
                <input type="date" name="djoin" id="djoin">
            </div>
            <div>
                  <label for="fw">Quantity of Cigrate(in one day)</label>
                  <input type="number" name="fw" min="0" max="20">
            </div>
            <div>
                 <label for="phon">Enter Phone no</label>
                 <input type="tel" id="phon" name="phon" pattern="[0-9]{10}" required>
            </div>
            <button type="submit" class="btn btn-success">Add User</button>
        </form>
    </fieldset>
    <script>
        var slider = document.getElementById("range");
        var output = document.getElementById("demo");
        output.innerHTML = slider.value;
        
        slider.oninput = function() {
          output.innerHTML = this.value;
        }
        </script>
</body>


</html>